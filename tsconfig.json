{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "baseUrl": ".",
    "outDir": "../build/client",
    "module": "esnext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "types": ["vite/client"]
  },
  "include": ["src"],
  "exclude": ["../server"]
}
